<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".activities.AddTransactionAmountActivity"
android:id="@+id/layout_add_transaction"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="top"
>

    <TextView
        android:id="@+id/text_amount"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/border_bottom"
        android:text="@string/defaultAmount"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/layout_input"
        android:padding="@dimen/padding_default"
        android:textAppearance="@style/large"
        android:gravity="bottom"
        />

    <android.support.v7.widget.GridLayout
        android:id="@+id/layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="4"
        app:rowCount="4"
        app:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:text="@string/add_transaction_amount_button_1"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="1"
            app:layout_rowSpan="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            />

        <Button
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_2"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="1"
            app:layout_rowSpan="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            />

        <Button
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_3"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            />

        <ImageButton
            android:id="@+id/button_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@color/colorSecondary"
            android:contentDescription="@string/add_transaction_amount_button_check"
            android:cropToPadding="false"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowSpan="4"
            android:src="@drawable/ic_check_white"
            />

        <Button
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:text="@string/add_transaction_amount_button_4"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_5"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_6"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bottom"
            android:text="@string/add_transaction_amount_button_7"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_8"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left_bottom"
            android:text="@string/add_transaction_amount_button_9"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_comma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_none"
            android:text="@string/add_transaction_amount_button_comma"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left"
            android:text="@string/add_transaction_amount_button_0"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"/>

        <ImageButton
            android:id="@+id/button_backspace"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_left"
            android:textAppearance="@style/mediumSecondary"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            android:foreground="?android:attr/selectableItemBackground"
            android:stateListAnimator="@null"
            android:src="@drawable/ic_backspace"
            android:contentDescription="@string/add_transaction_amount_button_backspace" />

    </android.support.v7.widget.GridLayout>

</RelativeLayout>