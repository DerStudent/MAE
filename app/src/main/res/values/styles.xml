<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="large_amount_outcome" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorOutcome</item>
    </style>

    <style name="large_amount_income" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorIncome</item>
    </style>

    <style name="medium_amount_outcome" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/colorOutcome</item>
    </style>

    <style name="medium_amount_income" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/colorIncome</item>
    </style>

    <style name="small_amount_outcome" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@color/colorOutcome</item>
    </style>

    <style name="small_amount_income" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@color/colorIncome</item>
    </style>

    <style name="small" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_small_material</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="medium" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="large" parent="@android:style/TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="mediumSecondary" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

</resources>
