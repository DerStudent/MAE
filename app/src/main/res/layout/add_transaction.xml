<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddTransaction"
    android:id="@+id/add_transaction_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    >
    <!--android:theme="@style/ThemeOverlay.AppCompat.Light"-->


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_add_transaction_main"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/card_view_margin"
        android:background="@android:color/white"
        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_add_transaction_amount"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                >

                <Button
                    android:id="@+id/transaction_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical|left"
                    android:textSize="22sp"
                    android:textColor="@android:color/holo_red_light"
                    android:textAllCaps="false"
                />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_add_transaction_category"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:clickable="true"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                >

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/transaction_category_image"
                    android:layout_width="42dp"
                    android:layout_height="@dimen/profile_height"
                    android:contentDescription="@string/add_transaction___category_image_desc"
                    android:src="@mipmap/ic_launcher_round"
                    />

                <Button
                    android:id="@+id/transaction_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/transaction_category_image"
                    android:background="@android:color/white"
                    android:gravity="center_vertical|left"
                    android:text="Supermarkt"
                    android:layout_marginLeft="20dp"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>