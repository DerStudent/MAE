<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddTransaction"
    android:id="@+id/add_transaction_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    >

    <!-- Dummy item to prevent EditText from receiving focus -->
    <LinearLayout
        android:id="@+id/autofocusDummyLayout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"
        android:orientation="vertical" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_add_transaction_main"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:cardElevation="@dimen/cardview_default_elevation"
        android:layout_margin="@dimen/card_view_margin"
        android:background="@android:color/white"
        >

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_add_transaction_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                >

                <TextView
                    android:id="@+id/transaction_amount_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/editTextBackground"
                    android:textColor="@android:color/holo_red_light"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="62dp"
                    android:textSize="30sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_add_transaction_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                >

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/transaction_category_image_view"
                    android:layout_width="@dimen/default_image_size"
                    android:layout_height="@dimen/default_image_size"
                    android:contentDescription="@string/add_transaction_category_image_desc"
                    android:src="@mipmap/ic_launcher_round"
                    />

                <TextView
                    android:id="@+id/transaction_category_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/transaction_category_image_view"
                    android:background="?android:attr/editTextBackground"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_add_transaction_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                >

                <ImageView
                    android:id="@+id/transaction_note_image_view"
                    android:layout_width="@dimen/default_image_size"
                    android:layout_height="@dimen/default_image_size"
                    android:padding="5dp"
                    android:contentDescription="@string/add_transaction_note_image_desc"
                    android:src="@drawable/ic_add_transaction_note"
                    />

                <EditText
                    android:id="@+id/transaction_note_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/transaction_note_image_view"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:hint="@string/add_transaction_hint_note"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_add_transaction_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/relative_layout_inside_card_view_padding"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/transaction_calendar_image_view"
                    android:layout_width="@dimen/default_image_size"
                    android:layout_height="@dimen/default_image_size"
                    android:padding="5dp"
                    android:contentDescription="@string/add_transaction_calendar_image_desc"
                    android:src="@drawable/ic_add_transaction_calendar"
                    />

                <TextView
                    android:id="@+id/transaction_calendar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/transaction_calendar_image_view"
                    android:background="?android:attr/editTextBackground"
                    android:gravity="center_vertical|start"
                    android:layout_marginStart="20dp"
                    android:textSize="18sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>